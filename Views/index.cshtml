<h1>Contacts</h1>

<ul>
@if (@Model.Count == 0)
  {
    <h2>You Contacts are empty!</h2>
    <p>Please add a new contact to your list.</p>
  }
else
{
  <p>Please select a contact to view its information.</p>
  @foreach (var contact in Model)
  {
    <li><a href="contact/@contact.GetId()">@contact.GetName()</a></li>
  }
}
</ul>
<a href="/contact/new_contact">Add New Contact</a>
<form action="/contact/clear_contacts" method="post">
  <label for="clear-contacts">Clear All Contacts</label>
  <button type="submit">Submit</button>
</form>
