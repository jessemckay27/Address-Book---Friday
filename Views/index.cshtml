<h1>Contacts</h1>
@if (@Model.Count == 0)
{
  <p>Your <b>Contacts</b> are empty!</p>
}
else
{
  <p>Please select a <b>contact</b> to view its information.</p>
  <ol>
  @foreach (var contact in Model)
  {
    <li><a href="contact/@contact.GetId()">@contact.GetName()</a></li>
  }
  </ol>
}
<p><a href="/contact/new_contact">Add New Contact</a></p>
<form action="/contact/clear_contacts" method="post">
  <button type="submit">Clear Contacts</button>
</form>
